{
  "$schema": "../../schemas/config.schema.json",
  "maxIterations": 30,
  "planning": {
    "enabled": true,
    "autoplan": true,
    "complexityThreshold": 6
  },
  "memory": {
    "enabled": true,
    "types": {
      "episodic": true,
      "semantic": true,
      "working": true
    }
  },
  "codebaseContext": {
    "enabled": true,
    "excludePatterns": [
      "**/node_modules/**",
      "**/dist/**",
      "**/build/**",
      "**/.git/**",
      "**/coverage/**"
    ]
  },
  "resilience": {
    "incompleteActionAutoLoop": true,
    "maxIncompleteAutoLoops": 2,
    "autoLoopPromptStyle": "strict",
    "taskLeaseStaleMs": 300000
  },
  "hooks": {
    "enabled": true,
    "shell": {
      "enabled": false,
      "defaultTimeoutMs": 5000,
      "envAllowlist": [],
      "commands": [
        {
          "id": "notify-on-run-after",
          "event": "run.after",
          "command": "node",
          "args": [
            "./scripts/hook-run-after.js"
          ]
        }
      ]
    }
  }
}
